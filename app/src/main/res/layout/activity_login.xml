<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <ImageView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scaleType="centerCrop"        android:src="@drawable/bg" />    <Button        android:id="@+id/commit"        android:layout_width="400dp"        android:layout_height="60dp"        android:layout_below="@+id/password"        android:layout_centerHorizontal="true"        android:layout_marginLeft="20dp"        android:layout_marginRight="20dp"        android:layout_marginTop="80dp"        android:background="@drawable/bg_view_blue_trans"        android:focusableInTouchMode="true"        android:text="登    录"        android:textColor="@android:color/white"        android:textSize="@dimen/text_large_size"        android:translationZ="5dp" />    <TextView        android:layout_width="wrap_content"        android:layout_height="0dp"        android:layout_weight="1" />    <TextView        android:id="@+id/textView3"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="38dp" />    <AutoCompleteTextView        android:id="@+id/name"        android:layout_width="400dp"        android:layout_height="wrap_content"        android:layout_above="@id/password"        android:layout_alignLeft="@id/password"        android:layout_centerHorizontal="true"        android:layout_marginBottom="40dp"        android:layout_marginRight="30dp"        android:background="@drawable/login_edit_bg"        android:cursorVisible="true"        android:hint="用户名"        android:imeOptions="actionNext"        android:maxLength="32"        android:paddingBottom="15dp"        android:paddingLeft="80dp"        android:singleLine="true"        android:textColor="@android:color/primary_text_dark_nodisable"        android:textColorHint="@android:color/darker_gray"        android:textCursorDrawable="@null"        android:textSize="18sp" />    <EditText        android:id="@+id/password"        android:layout_width="400dp"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:layout_marginLeft="30dp"        android:layout_marginRight="30dp"        android:background="@drawable/login_edit_bg"        android:cursorVisible="true"        android:hint="密码"        android:imeOptions="actionSend"        android:inputType="textPassword"        android:maxLength="32"        android:paddingBottom="15dp"        android:paddingLeft="80dp"        android:singleLine="true"        android:textColor="@android:color/primary_text_dark_nodisable"        android:textColorHint="@android:color/darker_gray"        android:textCursorDrawable="@null"        android:textSize="18sp" />    <CheckBox        android:id="@+id/mCheckBox"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignEnd="@id/password"        android:layout_below="@id/password"        android:buttonTint="@android:color/primary_text_dark_nodisable"        android:text="保存密码"        android:textColor="@android:color/primary_text_dark_nodisable" />    <CheckBox        android:id="@+id/mCheckBox2"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignStart="@id/password"        android:layout_below="@id/password"        android:buttonTint="@android:color/primary_text_dark_nodisable"        android:text="自动登录"        android:textColor="@android:color/primary_text_dark_nodisable" />    <ImageView        android:id="@+id/image4"        android:layout_width="18dp"        android:layout_height="18dp"        android:layout_alignBottom="@id/password"        android:layout_alignLeft="@id/password"        android:layout_marginBottom="20dp"        android:layout_marginLeft="30dp"        android:src="@drawable/icon_login_password" />    <ImageView        android:layout_width="18dp"        android:layout_height="18dp"        android:layout_alignBottom="@id/name"        android:layout_alignLeft="@id/name"        android:layout_marginBottom="20dp"        android:layout_marginLeft="30dp"        android:src="@drawable/icon_login_user" />    <TextView        android:id="@+id/title"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_above="@id/name"        android:layout_centerHorizontal="true"        android:layout_marginBottom="100dp"        android:gravity="center"        android:text="@string/app_name"        android:textColor="@android:color/primary_text_dark_nodisable"        android:textSize="32sp" /></RelativeLayout>